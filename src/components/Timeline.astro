---
export interface TimelineItem {
  company: string;
startYear: number;
  endYear: number;
  title: string;
  description: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<ol class="relative border-s-2 border-[#125767]">
  {
    items.map((item) => (
      <li class="mb-10 ms-4">
        <div class="absolute w-4 h-4 bg-[#88560f] rounded-full mt-2 -start-2 border border-white"></div>
        <h3 class="mb-1 text-sm font-normal leading-none text-gray-900"> {item.company} </h3>
        <time class="mb-1 text-sm font-normal leading-none text-gray-400">
          {item.startYear}-{item.endYear}
        </time>
       
       
        <h3 class="text-lg font-semibold text-[#125767]">
          {item.title}
        </h3>
        <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
          {item.description}
        </p>
        <a>
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </a>
      </li>
    ))
  }
</ol>
