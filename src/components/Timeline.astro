---
export interface TimelineItem {
  company: string;
  startYear: number;
  endYear: number;
  title: string;
  description: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<ol class="relative border-s border-gray-200">
  {
    items.map((item) => (
      <li class="mb-10 ms-4">
        <div class="absolute w-4 h-4 bg-[#73a8a4] rounded-full -start-2  " />
        <h3 class="mb-1 text-md font-normal leading-none text-[#5a6252]">
          {" "}
          {item.company}{" "}
          <time class="mb-1 text-sm font-normal leading-none text-gray-400">
            {item.startYear}-{item.endYear}
          </time>
        </h3>

        <div class=" bg-[#325764] rounded-xl px-2 py-2 ">
          {" "}
          <h3 class="text-lg font-semibold  text-white">{item.title}</h3>
        </div>

        <p class="mb-4 text-base font-normal text-gray-500 ">
          {item.description}
        </p>
        <a>
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </a>
      </li>
    ))
  }
</ol>
